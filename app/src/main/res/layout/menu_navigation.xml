<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/Rel_Navigation_Menu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="invisible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/AppBarLayNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/NavigationBackButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_back"
                        app:backgroundTint="@color/maincolor"
                        app:fabSize="mini"
                        app:rippleColor="@android:color/black" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="Navigation Menu"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="22dp" />

                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/CardViewNavigation"
            style="@style/CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AppBarLayNavigation"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/maincolor"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/NavigationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/cardview_bg"
                android:padding="2dp"
                android:text="Edit Nav. Menu (Background Image)"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/NavigationTitleCard01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/NavigationTitle"
                android:layout_marginTop="20dp"
                android:text="Image size: 600 x 300"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/NavigationTitleCard02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/NavigationTitleCard01"
                android:text="(Add a direct link to your Navigation Menu Banner Image URL. Use the recommended image size)"
                android:textAlignment="textEnd"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/NavigationImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_below="@+id/NavigationTitleCard02"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/NavigationTitleCard03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/NavigationImage"
                android:layout_marginTop="20dp"
                android:text="Current Banner Background Image"
                android:textAlignment="center"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/EditTextNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NavigationTitleCard03"
                android:layout_marginTop="20dp"
                android:background="@drawable/cardview_bg2"
                android:hint="Add Background Image URL"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/NavigationTitleCard04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EditTextNavigation"
                android:layout_marginTop="5dp"
                android:text="Example: http://i.hizliresim.com/qvNg4R.jpg"
                android:textSize="12sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/NavigationImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/NavigationTitleCard04"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_send"
                app:backgroundTint="@color/white"
                app:rippleColor="@android:color/black" />

        </RelativeLayout>
        </android.support.v7.widget.CardView>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>