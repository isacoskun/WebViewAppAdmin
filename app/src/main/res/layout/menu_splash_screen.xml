<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/AppBarLaySplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Splash Screen"
                android:fontFamily="@font/montserrat_alternates"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:textAlignment="center"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/Lin_Lay_05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/AppBarLaySplash">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp"
        style="@style/CardView"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/maincolor">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/SplashTitle02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit splash screen logo"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:textAlignment="center"
            android:background="@drawable/cardview_bg"
            android:padding="2dp"
            android:layout_marginBottom="10dp" />

    <ImageView
        android:id="@+id/SplashLogoCard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/SplashTitle02"/>

            <TextView
                android:id="@+id/SplashLogoTitleCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The splash screen logo now in use."
                android:textSize="13sp"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/SplashLogoCard" />

            <EditText
                android:id="@+id/EditTextSplash01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SplashLogoCard"
                android:background="@drawable/cardview_bg2"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    </LinearLayout>
</RelativeLayout>